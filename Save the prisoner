int saveThePrisoner(int n, int m, int s) {
    int last = (s - 1 + m - 1) % n + 1;
    return last;
}

int main() {
    int t;  
    scanf("%d", &t);

    for (int i = 0; i < t; i++) {
        int n, m, s;
        scanf("%d %d %d", &n, &m, &s);

        int result = saveThePrisoner(n, m, s);
        printf("%d\n", result);
    }

    return 0;
}
